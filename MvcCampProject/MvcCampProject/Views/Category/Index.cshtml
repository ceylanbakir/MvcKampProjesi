@using EntityLayer.Concrete
@model List<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="card">
        <div class="card-header border-transparent">
            <h3 class="card-title">Kategoriler</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>

            </div>
        </div>
        <div class="col-md-12 col-12 col-sm-12 col-lg-12 col-xl-12">
            <div class="card">
                <div class="card-header">
                    <a href="/Category/CategoryAdd/" class="btn btn-success">Kategori Ekle</a>
                </div>
                 @*/.card-header*@ 
                <div class="card-body p-0">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Kategori Başlık</th>
                                <th>Durum</th>
                                <th>Başlıklar</th>
                                <th>İşlemler</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CategoryName</td>
                                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                                    <td><button class="btn btn-info">Kategoriye Ait Başlılar</button></td>

                                    <td><a href="/Category/CategoryEdit/@item.CategoryId" class="btn btn-success">Güncelle</a> | <a href="/Category/Delete/@item.CategoryId" class="btn btn-danger">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
        </div>

    </div>
</div>



