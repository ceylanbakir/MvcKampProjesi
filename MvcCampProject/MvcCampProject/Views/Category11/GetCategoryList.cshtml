@using EntityLayer.Concrete
@model List<Category>
@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h3>MVC KAMP</h3>
<br />
<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>Categori Adı</th>
            <th>Açıklama</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryName</td>
                <td>@item.CategoryContent</td>
                <td>@item.Status</td>
                <td><button class="btn btn-info">Güncelle</button> | <button class="btn btn-info">Sil</button></td>
            </tr>
        }
    </tbody>
</table>
<button class="btn btn-info">Yeni Kategori</button>
